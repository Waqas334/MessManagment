<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_edges"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_menu_item_day"
        style="@style/day_title_style"
        android:text="Sunday" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="9">


        <TextView
            android:id="@+id/tv_day_1_meal_1_name"
            style="@style/meal_name_style"
            android:text="Brunch:" />


        <TextView
            android:id="@+id/tv_menu_item_lunch"
            style="@style/meal_style"
            android:text="Halwa Puri, Nan" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">


        <TextView
            android:id="@+id/tv_day_1_meal_2_name"
            style="@style/meal_name_style"
            android:text="Brunch:" />

        <TextView
            android:id="@+id/tv_menu_item_dinner"
            style="@style/meal_style"
            android:text="Halwa Puri, Nan" />

    </LinearLayout>


</LinearLayout>